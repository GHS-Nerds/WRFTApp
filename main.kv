#:kivy 1.8.0
#: import FadeTransition kivy.uix.screenmanager.FadeTransition

ScreenManagement:
    transition: FadeTransition()
    HomeScreen:
    SettingsScreen:
    RecordCatchScreen:
    WeatherScreen:
    MapScreen:

<HomeScreen>:
    name: 'home'
    AnchorLayout:
        anchor_x: 'right'
        anchor_y: 'top'
        Button:
            on_release: app.root.current = 'settings'
            text: 'Settings'
            font_size: 20
            size_hint: 0.5,0.5
    AnchorLayout:
        anchor_x: 'left'
        anchor_y: 'top'
        Button:
            on_release: app.root.current = 'recordCatch'
            text: 'Record catch'
            font_size: 20
            size_hint: 0.5,0.5
    AnchorLayout:
        anchor_x: 'left'
        anchor_y: 'bottom'
        Button:
            on_release: app.root.current = 'weather'
            text: 'Weather'
            font_size: 20
            size_hint: 0.5,0.5
    AnchorLayout:
        anchor_x: 'right'
        anchor_y: 'bottom'
        Button:
            on_release: app.root.current = 'map'
            text: 'Map'
            font_size: 20
            size_hint: 0.5,0.5

<SettingsScreen>:
    name: 'settings'
    FloatLayout:
        Button:
    AnchorLayout:
        anchor_x: 'left'
        anchor_y: 'top'
            on_release: app.root.current = 'home'
            text: 'Back'
            font_size: 20
            size_hint: 0.5, 0.5


<RecordCatchScreen>:
    name: 'recordCatch'
    fishSize: fishLengthIn
    fNameIn: root.fNameIn
    sNameIn: root.sNameIn
    fishSpeciesIn: root.fishSpeciesIn
    GridLayout:
        rows: 3
        cols: 3
        Button:
            on_release: app.root.current = 'home'
            text: 'Back'
            font_size: 20
        Button:
        	id: HiddenSpacer
            text: ' '
            font_size: 20
            background_color: (0, 0, 0, 0)
        Button:
            text: 'Send email \nDEBUG BUTTON. \nWILL DISAPPEAR'
            font_size: 20
        Label:
        	text: 'Please enter the size of your fish in cm:'
        TextInput:
        	id: fishLengthIn
			font_size: 20
        	multiline:False
        Button:
        	id: recordSize
            text: 'Package Data \nDEBUG BUTTON.\n WILL DISAPPEAR'
            font_size: 20
            on_release: root.csvPackage(root.fNameIn, root.sNameIn, root.fishSpeciesIn, root.fishWeightCollection(), root.fishLengthCollection())

<WeatherScreen>:
    name: 'weather'
    FloatLayout:
        Button:
    AnchorLayout:
        anchor_x: 'left'
        anchor_y: 'top'
            on_release: app.root.current = 'home'
            text: 'Back'
            font_size: 20
            size_hint: 0.5, 0.5

<MapScreen>:
    name: 'map'
    FloatLayout:
        Button:
    AnchorLayout:
        anchor_x: 'left'
        anchor_y: 'top'
            on_release: app.root.current = 'home'
            text: 'Back'
            font_size: 20
            size_hint: 0.5, 0.5
