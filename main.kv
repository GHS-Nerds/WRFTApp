#:kivy 1.8.0
#:import FadeTransition kivy.uix.screenmanager.FadeTransition

ScreenManagement:
    transition: FadeTransition()
    HomeScreen:
    SettingsScreen:
    RecordCatchScreen:
    WeatherScreen:
    MapScreen:
    swlScreen:

<HomeScreen>:
    name: 'home'
    AnchorLayout:
        anchor_x: 'right'
        anchor_y: 'top'
        Button:
            on_release: app.root.current = 'settings'
            text: 'Settings'
            font_size: 20
            size_hint: 0.5,0.5
    AnchorLayout:
        anchor_x: 'left'
        anchor_y: 'top'
        Button:
            on_release: app.root.current = 'recordCatch'
            text: 'Record catch'
            font_size: 20
            size_hint: 0.5,0.5
    AnchorLayout:
        anchor_x: 'left'
        anchor_y: 'bottom'
        Button:
            on_release: app.root.current = 'weather'
            text: 'Weather'
            font_size: 20
            size_hint: 0.5,0.5
    AnchorLayout:
        anchor_x: 'right'
        anchor_y: 'bottom'
        Button:
            on_release: app.root.current = 'map'
            text: 'Map'
            font_size: 20
            size_hint: 0.5,0.5

<SettingsScreen>:
    name: 'settings'
    AnchorLayout:
        anchor_x: 'left'
        anchor_y: 'top'
        Button:
            on_release: app.root.current = 'home'
            text: 'Back'
            font_size: 20
            size_hint: 0.5, 0.5

<RecordCatchScreen>:
    name: 'recordCatch'
    fishSpeciesIn: root.fishSpeciesIn
    GridLayout:
        rows: 3
        cols: 3
        Label:
            text: 'Please enter your full name'
        TextInput:
            id: NameIn
            font_size: 20
            multiline:False
        Button:
            on_release: app.root.current = 'home'
            text: 'Cancel'
            font_size: 20
        Label:
            text: 'Please enter the Species of your fish'
        TextInput:
            id: fishSpeciesIn
            font_size: 20
            multiline:False
        Button:
            text: 'Next'
            font_size: 20
            on_release: app.root.current = 'wl'

<swlScreen>:
    name: 'wl'
    fishWeightIn: root.fishWeightIn
    fishLengthIn: root.fishLengthIn
    GridLayout:
        rows: 3
        cols: 3
        Label:
            text: 'Please enter the Length of your fish'
        TextInput:
            id: fishLengthIn
            font_size: 20
            multiline:False
        Button:
            on_release: app.root.current = 'home'
            text: 'Cancel'
            font_size: 20
        Label:
            text: 'Please enter the weight of your fish'
        TextInput:
            id: fishWeightIn
            font_size: 20
            multiline:False
        Button:
            id: recorddata
            text: 'Submit Data'
            font_size: 20
            on_release: root.csvPackage(root.NameIn, root.fishSpeciesIn, root.fishWeightIn, root.fishLengthIn) app.root.current = 'home'

<WeatherScreen>:
    name: 'weather'
    AnchorLayout:
        anchor_x: 'left'
        anchor_y: 'top'
        Button:
            on_release: app.root.current = 'home'
            text: 'Back'
            font_size: 20
            size_hint: 0.5, 0.5

<MapScreen>:
    name: 'map'
    AnchorLayout:
        anchor_x: 'left'
        anchor_y: 'top'
        Button:
            on_release: app.root.current = 'home'
            text: 'Back'
            font_size: 20
            size_hint: 0.5, 0.5
