#:kivy 1.8.0
#:import FadeTransition kivy.uix.screenmanager.FadeTransition

ScreenManagement:
    transition: FadeTransition()
    HomeScreen:
    SettingsScreen:
    RecordCatchScreen:
    WeatherScreen:
    InfoScreen:
    InvaScreen:
    NonInvaScreen:
    LicencesScreen:

<HomeScreen>:
    name: 'home'
    AnchorLayout:
        anchor_x: 'right'
        anchor_y: 'top'
        Button:
            on_release: app.root.current = 'settings'
            text: 'Settings'
            font_size: 20
            size_hint: 0.5,0.5
            background_color: (1.0, 0.0, 0.0, 1.0)
    AnchorLayout:
        anchor_x: 'left'
        anchor_y: 'top'
        Button:
            on_release: app.root.current = 'recordCatch'
            text: 'Record catch'
            font_size: 20
            size_hint: 0.5,0.5
            background_color: (0.0, 1.0, 1.0, 1.0)
    AnchorLayout:
        anchor_x: 'left'
        anchor_y: 'bottom'
        Button:
            on_release: app.root.current = 'weather'
            text: 'Weather'
            font_size: 20
            size_hint: 0.5,0.5
            background_color: (0.0, 0.0, 1.0, 1.0)
    AnchorLayout:
        anchor_x: 'right'
        anchor_y: 'bottom'
        Button:
            on_release: app.root.current = 'Info'
            text: 'Information'
            font_size: 20
            size_hint: 0.5,0.5
            background_color: (0.0, 1.0, 0.0, 1.0)

<SettingsScreen>:
    name: 'settings'
    AnchorLayout:
        anchor_x: 'left'
        anchor_y: 'top'
        Button:
            on_release: app.root.current = 'home'
            text: 'Back'
            font_size: 20
            size_hint: 0.5, 0.5
            background_color: (1.0, 0.0, 0.0, 1.0)

<RecordCatchScreen>:
    name: 'recordCatch'
    fishSpeciesIn: fishSpeciesIn.text
    nameIn: nameIn.text
    fishWeightIn: fishWeightIn.text
    fishLengthIn: fishLengthIn.text
    GridLayout:
        rows: 6
        cols: 2
        Label:
            text: 'Please enter your full name'
        TextInput:
            id: nameIn
            font_size: 20
            multiline:False
        Label:
            text: 'Please enter the Species of your fish'
        TextInput:
            id: fishSpeciesIn
            font_size: 20
            multiline:False
        Label:
            text: 'Please enter the Length of your fish'
        TextInput:
            id: fishLengthIn
            font_size: 20
            multiline:False
        Label:
            text: 'Please enter the weight of your fish'
        TextInput:
            id: fishWeightIn
            font_size: 20
            multiline:False
        Button:
            on_release: app.root.current = 'home'
            text: 'Back'
            font_size: 20
            size_hint: 0.5, 0.5
            background_color: (1.0, 0.0, 0.0, 1.0)
        Button:
            text: 'Submit Data'
            font_size: 20
            on_release: app.csvPackage(root.nameIn, root.fishSpeciesIn, root.fishWeightIn, root.fishLengthIn, app.index)
            on_release: app.root.current = 'home'
            background_color: (0.0, 1.0, 1.0, 1.0)

<WeatherScreen>:
    name: 'weather'
    AnchorLayout:
        anchor_x: 'left'
        anchor_y: 'top'
        Button:
            on_release: app.root.current = 'home'
            text: 'Back'
            font_size: 20
            size_hint: 0.5, 0.5
            background_color: (1.0, 0.0, 0.0, 1.0)

<InfoScreen>:
    name: 'Info'
    AnchorLayout:
        anchor_x: 'left'
        anchor_y: 'top'
        Button:
            on_release: app.root.current = 'home'
            text: 'Back'
            font_size: 20
            size_hint: 0.5, 0.5
            background_color: (1.0, 0.0, 0.0, 1.0)
    AnchorLayout:
        anchor_x: 'right'
        anchor_y: 'bottom'
        Button:
            on_release: app.root.current = 'NonInva'
            text: 'Non-Invasive Species'
            font_size: 20
            size_hint: 0.5,0.5
            background_color: (0.0, 1.0, 0.0, 1.0)
    AnchorLayout:
        anchor_x: 'left'
        anchor_y: 'bottom'
        Button:
            on_release: app.root.current = 'Inva'
            text: 'Invasive Species'
            font_size: 20
            size_hint: 0.5,0.5
            background_color: (0.0, 0.0, 1.0, 1.0)
    AnchorLayout:
        anchor_x: 'right'
        anchor_y: 'top'
        Button:
            on_release: app.root.current = 'Licences'
            text: 'Best places to go and Licences'
            font_size: 20
            size_hint: 0.5,0.5
            background_color: (0.0, 1.0, 1.0, 1.0)

<InvaScreen>:
    name: 'Inva'
    ScrollView:

    GridLayout:
        cols: 1
        padding: 10
        spacing: 30
        size_hint_y: None
        height: self.minimum_height
        Button:
            on_release: app.root.current = 'home'
            text: 'Back'
            font_size: 20
            background_color: (1.0, 0.0, 0.0, 1.0)
        Button:
            on_release: app.root.current = 'home'
            text: 'Back'
            font_size: 20
            background_color: (1.0, 0.0, 0.0, 1.0)
        Button:
            on_release: app.root.current = 'home'
            text: 'Back'
            font_size: 20
            background_color: (1.0, 0.0, 0.0, 1.0)
        Button:
            on_release: app.root.current = 'home'
            text: 'Back'
            font_size: 20
            background_color: (1.0, 0.0, 0.0, 1.0)

<NonInvaScreen>:
    name: 'NonInva'

<LicencesScreen>:
    name: 'Licences'
